{
    "private": true,
    "name": "mentora-firebase",
    "version": "0.1.0",
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "deploy": "firebase --project $FIREBASE_PROJECT_ID deploy --only firestore:rules,firestore:indexes",
        "test": "firebase emulators:exec --only firestore 'vitest run'",
        "test:watch": "firebase emulators:exec --only firestore 'vitest --watch'",
        "test:ui": "firebase emulators:exec --only firestore 'vitest --ui'",
        "test:coverage": "firebase emulators:exec --only firestore 'vitest run --coverage'"
    },
    "dependencies": {
        "firebase": "^12.7.0",
        "zod": "^4.3.4"
    },
    "devDependencies": {
        "@firebase/rules-unit-testing": "^5.0.0",
        "@types/node": "^24.10.4",
        "firebase-admin": "^13.6.0",
        "firebase-tools": "^14.27.0",
        "tsup": "^8.5.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    }
}
